module seven_segment_driver(
    input [3:0] num, // 输入一个数字（0-9）
    output reg [6:0] seg // 七段数码管的显示输出
);

    always @(*) begin
        case (num)
            4'd0: seg = 7'b1111110; // 显示 0
            4'd1: seg = 7'b0110000; // 显示 1
            4'd2: seg = 7'b1101101; // 显示 2
            4'd3: seg = 7'b1111001; // 显示 3
            4'd4: seg = 7'b0110011; // 显示 4
            4'd5: seg = 7'b1011011; // 显示 5
            4'd6: seg = 7'b1011111; // 显示 6
            4'd7: seg = 7'b1110000; // 显示 7
            4'd8: seg = 7'b1111111; // 显示 8
            4'd9: seg = 7'b1111011; // 显示 9
            default: seg = 7'b0000000; // 默认关闭显示
        endcase
    end
endmodule