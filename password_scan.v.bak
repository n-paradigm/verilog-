module password_scan(
    input [3:0] pass_buf [0:3], // 输入的密码
    input [3:0] preset_password [0:3], // 预设的密码
    output reg match // 密码匹配结果
);

    always @(*) begin
        if (pass_buf[0] == preset_password[0] &&
            pass_buf[1] == preset_password[1] &&
            pass_buf[2] == preset_password[2] &&
            pass_buf[3] == preset_password[3]) 
            match = 1; // 密码匹配
        else
            match = 0; // 密码不匹配
    end
endmodule